<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane  prefWidth="700.0" style="-fx-border-color: white" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.serverMail.controller.MailServerController">
    <top>
        <TextField  editable="false" prefHeight="75.0" prefWidth="512.0" style="-fx-background-color: #0598ff; -fx-text-fill: white; -fx-text-alignment: center; " text="History clients action">
            <font>
                <Font name="System Bold " size="18.0" />
            </font>
            <padding>
                <Insets left="400.0" />
            </padding>
        </TextField>
    </top>
    <center>
        <VBox alignment="CENTER">
            <TextField fx:id="searchTextField" onKeyReleased="#handleEventSearch" promptText="Search..." />
            <ListView fx:id="eventListView" style="-fx-text-alignment: left; -fx-background-color: white; -fx-font-size: 17px;" VBox.vgrow="ALWAYS">
                <BorderPane.margin>
                    <Insets />
                </BorderPane.margin>
            </ListView>
        </VBox>
    </center>
    <bottom>
        <ToolBar>
                <Button onAction="#handleEventOrderAscending" text="Order ascending" />
                <Button onAction="#handleEventOrderDescending" text="Order descending" />
                <Button onAction="#handleEventReset" text="Reset log" />
        </ToolBar>
    </bottom>
    <right>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <Button layoutX="63.0" layoutY="14.0" mnemonicParsing="false" onAction="#readUsers" text="Read Users" />
                <TextArea fx:id="userList" editable="false" layoutX="1.0" layoutY="55.0" prefHeight="362.0" prefWidth="200.0" wrapText="true" />
        </AnchorPane>
    </right>
</BorderPane>
