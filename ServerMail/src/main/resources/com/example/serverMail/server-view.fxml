<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.serverMail.controller.MailServerController">
    <top>
        <TextArea fx:id="logTextArea" editable="false" prefHeight="36.0" prefWidth="512.0" text="History clients action" wrapText="true">
            <font>
                <Font name="System Bold Italic" size="28.0" />
            </font>
        </TextArea>
    </top>
    <center>
        <ListView fx:id="eventListView" fixedCellSize="0.0" prefHeight="198.0" prefWidth="600.0" />
    </center>
    <bottom>
        <Button onAction="#handleAddEvent" text="Aggiugni eveneto" textAlignment="CENTER" />
    </bottom>
   <right>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="addUserBtn" layoutX="67.0" layoutY="47.0" mnemonicParsing="false" onAction="#addUser" text="Add User" />
            <TextField fx:id="newUser" layoutX="26.0" layoutY="14.0" />
            <Button fx:id="userReaderBtn" layoutX="62.0" layoutY="83.0" mnemonicParsing="false" onAction="#readUsers" text="Read Users" />
            <TextArea fx:id="userList" layoutX="1.0" layoutY="109.0" prefHeight="200.0" prefWidth="200.0" />
         </children>
      </AnchorPane>
   </right>
</BorderPane>
